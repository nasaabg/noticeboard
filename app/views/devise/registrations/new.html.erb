<div class="row">
  <div class="col-md-4 col-md-offset-4"> 

    <h2 class: "form-signin-heading">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :class => "form-signin") do |f| %>
      <%= devise_error_messages! %>

       <label for="inputEmail" class="sr-only">Email address</label>
      <%= f.email_field :email, autofocus: true, id: "inputEmail", class: "form-control", placeholder: "Email address" %>
      <br>
      <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
       <label for="inputPassword" class="sr-only">Password</label>
        <%= f.password_field :password, autocomplete: "off", id: "inputPassword", class: "form-control", placeholder: "Password" %>
        <br>
        
      <label for="inputPasswordCon" class="sr-only">Password confirmation</label>
        <%= f.password_field :password_confirmation, autocomplete: "off", id: "inputPasswordCon", class: "form-control", placeholder: "Password confirmation" %>
        <br>

      <div><%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block"  %></div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>